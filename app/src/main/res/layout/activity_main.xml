<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerAppInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-177dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/Entire_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0000년 00월 05일 0요일"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:text="딩동 말씀"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/Current_picture"
                        android:layout_width="320dp"
                        android:layout_height="320dp"
                        android:src="@drawable/noneimage" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="327dp"
                    android:layout_height="94dp"
                    android:layout_marginTop="30dp"
                    android:gravity="left"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_box"
                        android:layout_width="320dp"
                        android:layout_height="87.5714dp"
                        android:background="#DDDDDD"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="7dp">
                        <LinearLayout
                            android:id="@+id/button_box"
                            android:layout_width="320dp"
                            android:layout_height="87.5714dp"
                            android:background="#DDDDDD"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button0000"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="7dp"
                                android:background="#DDDDDD"
                                android:drawableTop="@android:drawable/ic_menu_week"
                                android:text="어제말씀"
                                android:textColor="@color/black"
                                android:textSize="10dp"></androidx.appcompat.widget.AppCompatButton>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button0001"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="7dp"

                                android:background="#DDDDDD"
                                android:drawableTop="@android:drawable/ic_menu_gallery"
                                android:text="저장"
                                android:textColor="@color/black"
                                android:textSize="10dp"></androidx.appcompat.widget.AppCompatButton>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button0002"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="7dp"
                                android:background="#DDDDDD"
                                android:drawableTop="@android:drawable/ic_menu_share"
                                android:text="공유"
                                android:textColor="@color/black"
                                android:textSize="10dp"></androidx.appcompat.widget.AppCompatButton>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button0003"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="7dp"
                                android:background="#DDDDDD"
                                android:drawableTop="@android:drawable/ic_menu_info_details"
                                android:text="앱정보"
                                android:textColor="@color/black"
                                android:textSize="10dp"></androidx.appcompat.widget.AppCompatButton>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/messageSaved"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="87.5714dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/success_message_0_1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="41dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="false"
                            app:lottie_rawRes="@raw/check_icon"></com.airbnb.lottie.LottieAnimationView>

                        <TextView
                            android:id="@+id/success_message_0_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="저장되었습니다."
                            android:textColor="@color/black"
                            android:textSize="25dp"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/messageNotConnection"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="315dp"
                        android:layout_height="87.5714dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="네트워크 연결을 확인해주세요"
                            android:textColor="@color/black"
                            android:textSize="21dp"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#EEEEEE"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEEEEE"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEEEEE"
                    android:orientation="vertical"
                    android:stretchColumns="*">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EEEEEE"
                        android:paddingLeft="4dp"
                        android:text="앱 정보"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:text="말씀카드는 언제 업데이트되나요?"
                            android:textColor="@color/black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="한국 시간을 기준으로 자정에 업데이트 됩니다."
                            android:textColor="@color/black"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:text="궁금한 사항은 어디로 문의하나요?"
                            android:textColor="@color/black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="jinhyang.programmer@gmail.com로 메일 부탁드립니다."
                            android:textColor="@color/black"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:text="앱 내 저작권 표시"
                            android:textColor="@color/black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="(주) 아모레퍼시픽에서 제공하는 '아리따돋움'을 사용하였습니다."
                            android:textColor="@color/black"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:text="앱 버전"
                            android:textColor="@color/black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingLeft="4dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="1.5.4"
                            android:textColor="@color/black"></TextView>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>