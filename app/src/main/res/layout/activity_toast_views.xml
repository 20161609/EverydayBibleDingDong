<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToastViews">

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="103dp"
        app:cardCornerRadius="15dp"
        android:translationZ="5dp"
        android:translationX="-10dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="103dp"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"
                android:background="#EEEEEE"
                android:drawableTop="@android:drawable/ic_menu_week"
                android:fontFamily="@font/arita4_0_m"
                android:text="어제말씀"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:background="#EEEEEE"
                android:drawableTop="@android:drawable/ic_menu_gallery"
                android:fontFamily="@font/arita4_0_m"
                android:text="저장"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:background="#EEEEEE"
                android:drawableTop="@android:drawable/ic_menu_share"
                android:fontFamily="@font/arita4_0_m"
                android:text="공유"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:background="#EEEEEE"
                android:drawableTop="@android:drawable/ic_menu_info_details"
                android:fontFamily="@font/arita4_0_m"
                android:text="앱정보"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>