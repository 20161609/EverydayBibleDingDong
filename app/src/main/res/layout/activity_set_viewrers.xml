<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".set_Viewrers">


    <RelativeLayout
        android:id="@+id/set_viewers"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_centerInParent="true"
            android:id="@+id/messageSaved"
            android:layout_width="340dp"
            android:layout_height="113dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/messageSaved1"
                android:layout_width="340dp"
                android:layout_height="113dp"
                android:background="@drawable/custom_card"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/v_animation1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="41dp"
                    app:lottie_rawRes="@raw/check_icon"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="false" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="저장되었습니다."
                    android:textColor="@color/black"
                    android:textSize="25dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_alignParentTop="true"
            android:id="@+id/messageNotConnection"
            android:layout_width="340dp"
            android:layout_height="113dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="13dp">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="113dp"
                android:gravity="center"
                android:background="@drawable/custom_card"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="네트워크 연결을 확인해주세요"
                    android:textColor="@color/black"
                    android:textSize="21dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/day_list"
            android:layout_width="340dp"
            android:layout_height="113dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_shadow2"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginStart="10dp"
                android:layout_width="315dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/arita4_0_b"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dayBox_message"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_back"
                    android:layout_alignParentEnd="true"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/presence_offline"
                    android:clickable="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="328.9dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5.45dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="00"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="00"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="00"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day3"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="00"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day4"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="00"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day5"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="00"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day6"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="00"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>