<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".set_Viewrers">


    <RelativeLayout
        android:id="@+id/set_viewers"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_centerInParent="true"
            android:id="@+id/messageSaved"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="103dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/v_animation1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="41dp"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/check_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="저장되었습니다."
                    android:textColor="@color/black"
                    android:textSize="25dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_alignParentTop = "true"
            android:id="@+id/messageNotConnection"
            android:layout_width="350dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="103dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arita4_0_m"
                    android:text="네트워크 연결을 확인해주세요"
                    android:textColor="@color/black"
                    android:textSize="21dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/day_list_cover"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="103dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:id="@+id/button_box2"
                    android:layout_width="340dp"
                    android:layout_height="103dp"
                    android:background="#EEEEEE"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp">

                        <TextView
                            android:layout_width="295dp"
                            android:layout_height="26dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/arita4_0_b"
                            android:text="최근 일주일 말씀 입니다."
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button_back"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:drawable/presence_offline"
                            android:clickable="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="340dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/day0"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="11dp"
                            android:background="@drawable/shape_for_circle_button"
                            android:fontFamily="@font/arita4_0_m"
                            android:text="00"
                            android:textSize="16dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/day1"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="18dp"
                            android:background="@drawable/shape_for_circle_button"
                            android:fontFamily="@font/arita4_0_m"
                            android:text="00"
                            android:textSize="16dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/day2"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="18dp"
                            android:background="@drawable/shape_for_circle_button"
                            android:fontFamily="@font/arita4_0_m"
                            android:text="00"
                            android:textSize="16dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/day3"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="18dp"
                            android:background="@drawable/shape_for_circle_button"
                            android:fontFamily="@font/arita4_0_m"
                            android:text="00"
                            android:textSize="16dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/day4"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="18dp"
                            android:background="@drawable/shape_for_circle_button"
                            android:fontFamily="@font/arita4_0_m"
                            android:text="00"
                            android:textSize="16dp"></androidx.appcompat.widget.AppCompatButton>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/day5"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="18dp"
                            android:background="@drawable/shape_for_circle_button"
                            android:fontFamily="@font/arita4_0_m"
                            android:text="00"
                            android:textSize="16dp"></androidx.appcompat.widget.AppCompatButton>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/day6"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="18dp"
                            android:background="@drawable/shape_for_circle_button"
                            android:fontFamily="@font/arita4_0_m"
                            android:text="00"
                            android:textSize="16dp"></androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>